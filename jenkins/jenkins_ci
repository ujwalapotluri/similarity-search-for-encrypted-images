pipeline {
    agent any
    tools {
        maven "maven"
    }
    stages {
        stage('compile') {
           steps {
              git 'https://github.com/ujwalapotluri/similarity-search-for-encrypted-images.git'
              sh 'mvn compile'
           }
        }
        stage('codereview-pmd') {
           steps {
              sh 'mvn -P metrics pmd:pmd'
           }
           post {
               success {
                  recordIssues(tools: [pmdParser(pattern: '**/pmd.xml')])
               }
           }
        }
        stage('unit-test') {
           steps {
              sh 'mvn test'
                 }
           post {
               success {
                  junit 'target/surefire-reports/*.xml'
               }
           }
        }
        stage('package') {
           steps {
              sh 'mvn package'
           }
        }
    }
}
